@model IEnumerable<Homework5.Model.db.Post>

@{
    ViewData["Title"] = "Search";
}
<div class="text-center">
    <form asp-action="Search" asp-controller="Home">
        <input type="text" name="query" placeholder="Search.." />
        <input type="submit" value="Search" />
    </form>

</div>

<h1>Search result</h1>

<hr />
<div class="list-group" style="width: 80%">
    @foreach (var item in Model)
    {
        <a href="#" class="list-group-item list-group-item-action">
            <div class="d-flex w-100 justify-content-between">
                <h5 class="mb-1"> @Html.DisplayFor(modelItem => item.UserPost) </h5>
                <small class="text-muted"> @Html.DisplayFor(modelItem => item.UserDate)</small>
            </div>
            <p class="mb-1">@Html.DisplayFor(modelItem => item.UserName)</p>
        </a>
    }
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}